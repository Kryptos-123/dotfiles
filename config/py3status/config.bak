# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
	interval = 1
	separator = ""
	markup = "pango"
	color_good = "#b8ba25"
	color_degraded = "#fabc2e"
	color_bad = "#fb4833"
}
py3status {
	separator = true
#	separator_block_width = 0
}
order += "static_string start"
order += "external_script bat"
order += "check_tcp"
order += "window"
order += "apt_updates"
order += "backlight"
order += "volume master"
order += "netdata"
order += "battery all"
order += "disk /"
order += "cpu_usage"
order += "memory"
order += "clock"
order += "static_string end"

static_string "start" {
	format = "<span foreground='#1abb9b' background='#222d31'></span>"
	separator_block_width = 0
}

external_script "bat"{
	script_path = "/home/kryptos/ssh_bat.sh"
	format = "<span foreground='#f8f8f8' background='#1abb9b'>{output}</span>"
	cache_timeout = 5 
	separator_block_width = 0
	on_click 1 = "exec kitty ssh server@home-server.local"
	on_click 3 = 'exec notify-send --expire-time=4000 --icon=" " "`cat ~/ssh_bat.txt`"'
}

check_tcp{
	host = "192.168.1.208"
	#host = "localhost"
	port = 80
	icon_on = "Up"
	icon_off = "Down"
	cache_timeout = 5
	format = "<span foreground='#f8f8f8' background='#1abb9b'>  {state} </span>"
	separator_block_width = 0
	on_click 1 = "exec kitty ssh server@home-server.local"
	on_click 3 = 'exec notify-send --expire-time=4000 --icon=" " "`cat ~/ssh_bat.txt`"'
}

window {
	format = "<span foreground='#585858' background='#1abb9b'></span><span foreground='#f8f8f8' background='#585858'> {title} </span>"
	separator_block_width = 0
	cache_timeout = 0.1
	max_width = 20
}

apt_updates {
	cache_timeout = 45
	separator_block_width = 0
	format = "<span foreground='#1abb9b' background='#585858'></span><span foreground='#f8f8f8' background='#1abb9b'>  </span><span foreground='#f8f8f8' background='#1abb9b'>{apt} </span>"
	on_click 1 = "exec kitty sudo apt upgrade"
	on_click 3 = "exec kitty sudo apt full-upgrade"
}

backlight {
	brightness_delta = 5
	cache_timeout = 1
	format = "<span foreground='#585858' background='#1abb9b'></span><span foreground='#f8f8f8' background='#585858'>  {level}% </span>"
	separator_block_width = 0
}
volume master {
        format = "<span foreground='#1abb9b'background='#585858'></span><span foreground='#f8f8f8' background='#1abb9b'>  %volume </span>"
        format_muted = "<span foreground='#1abb9b'background='#585858'></span><span foreground='#f7ca88' background='#1abb9b'>  %volume </span>"
        device = "pulse:alsa_output.pci-0000_00_1f.3.analog-stereo"
	on_click 1 = "exec pactl set-sink-mute @DEFAULT_SINK@ toggle && killall -SIGUSR1 py3status"
	on_click 3 = "exec pavucontrol"
	on_click 4 = "exec pactl set-sink-volume @DEFAULT_SINK@ +2% && killall -SIGUSR1 py3status"
	on_click 5 = "exec pactl set-sink-volume @DEFAULT_SINK@ -2% && killall -SIGUSR1 py3status"
	separator_block_width = 0
}

netdata {
	format = "<span foreground='#585858' background='#1abb9b'></span><span foreground='#f8f8f8' background='#585858'>  {down}↓ {up}↑ </span>"
	separator_block_width = 0
}

battery all {
        format = "<span foreground='#1abb9b' background='#585858'></span><span foreground='#f8f8f8' background='#1abb9b'> %status %percentage %remaining </span>"
	status_unk = ""
	status_chr = ""
	status_bat = ""
	status_full = ""
	last_full_capacity = true
	#hide_seconds = false
#	on_click 2 = "exec i3-nagbar -t warning -m 'Power Options' -B ' Shutdown ' 'systemctl poweroff' -B ' Reboot ' 'systemctl reboot' -B ' Sleep ' 'systemctl suspend'"
	separator_block_width = 0
}

disk "/" {
        format = "<span foreground='#585858' background='#1abb9b'></span><span foreground='#f8f8f8' background='#585858'>  %avail </span>"
	on_click 1 = "exec pcmanfm"
	separator_block_width = 0
}

cpu_usage {
        format = "<span foreground='#1abb9b' background='#585858'></span><span foreground='#f8f8f8' background='#1abb9b'>  %usage </span>"
	on_click 1 = "exec kitty htop"
	separator_block_width = 0
}

memory {
        format = "<span foreground='#585858' background='#1abb9b'></span><span foreground='#f8f8f8' background='#585858'>  %used </span>"
        threshold_degraded = " 1G"
        format_degraded = "  < %available"
	on_click 1 = "exec kitty htop"
	separator_block_width = 0
}

clock {
	format = ["<span foreground='#1abb9b' background='#585858'></span><span foreground='#f8f8f8' background='#1abb9b'>  Delhi: {Asia/Kolkata}</span>", "<span foreground='#1abb9b' background='#585858'></span><span foreground='#f8f8f8' background='#1abb9b'>  London: {Europe/London}</span>", "<span foreground='#1abb9b' background='#585858'></span><span foreground='#f8f8f8' background='#1abb9b'>  New York: {America/New_York}</span>"]
	format_time = ["<span foreground='#f8f8f8'>%H:%M:%S </span>","<span foreground='#f8f8f8'>%Y-%m-%d %H:%M:%S </span>","<span foreground='#f8f8f8'>%m/%d/%Y </span>"]
	button_change_time_format = 3
	button_reset = none
	separator_block_width = 0
}

static_string "end" {
	format = "<span foreground='#222d31' background='#1abb9b'></span>"
	separator_block_width = 0
}
