#!/usr/bin/env python

import i3ipc
import subprocess
i3 = i3ipc.Connection(auto_reconnect=True)

def on_close(_, e):
	focused = i3.get_tree().find_focused()
	if not focused.workspace().leaves():
		# If workspace empty
		workspaces = i3.get_workspaces()
		i = 1
		j = 1
		for workspace in workspaces:
			if workspace.name == "Update":
				break
			i3.command(f'rename workspace {workspace.name} to {i}')
			if i > j:
				j = i
			i+=1
		new = j + 1
		i3.command(f'workspace {new}')
	else:
		workspaces = i3.get_workspaces()
		i = 1
		for workspace in workspaces:
			if workspace.name == "Update":
				break
			i3.command(f'rename workspace {workspace.name} to {i}')
			i+=1

def on_change(_, e):
	workspaces = i3.get_workspaces()
	i = 1
	for workspace in workspaces:
		if workspace.name == "Update":
			break
		i3.command(f'rename workspace {workspace.name} to {i}')
		i+=1

i3.on('window::move', on_change)
i3.on('window::close', on_close)
i3.on('window::new', on_change)
i3.on('workspace::move', on_change)
i3.on('workspace::focus', on_change)

i3.main()
