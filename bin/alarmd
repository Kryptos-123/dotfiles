#!/bin/sh
if ! date -d "$1" >/dev/null || [ "$2" == "" ] || [ "$1" == "" ] || [ "$(echo "$1" | grep -o ":" | wc -l)" != "2" ];then
if [ "$1" == "" ];then
    notify-send "No Time"
else if ! date -d "$1" >/dev/null || [ "$(echo "$1" | grep -o ":" | wc -l)" != "2" ];then
    notify-send "Invalid time: $1"
fi
fi
if [ "$2" == "" ];then
    notify-send "No Message"
fi
exit
fi
notify-send "Alarm set for $1 with message \"$2\""
while true
do
    if [ "$1" == "$(date +"%H:%M:%S")" ];then
        notify-send -u critical "Alarm: $2" -i "/usr/share/icons/Papirus-Dark/symbolic/status/alarm-symbolic.svg"
        paplay /usr/share/sounds/Pop/stereo/alert/alarm-clock-elapsed.oga
        exit
    else
        sleep 1;
    fi
done

