#!/bin/sh
format=$(cat /home/mridul/.cache/lofi)
case $1 in
    cycle)
    case $format in
        0)
            echo 1 > ~/.cache/lofi
            echo 'set pause no' | socat - /tmp/mpvsocket
            exit
        ;;
        1)
            echo 0 > ~/.cache/lofi
            echo 'set pause yes' | socat - /tmp/mpvsocket
            exit
        ;;
    esac
    ;;
    exit)
        echo 'quit' | socat - /tmp/mpvsocket
        exit
    ;;
esac
case $format in 
    0)
        echo "  "
        exit
    ;;
    1)
        echo "  "
        echo "#f8f8f8"
        exit
    ;;
esac
echo ""
