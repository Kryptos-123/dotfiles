#!/bin/sh
status=$(cat /home/mridul/.cache/powerbutton)
if [ "$status" == "1" ]; then
    echo 0 > /home/mridul/.cache/powerbutton
    systemctl poweroff
else
    if [ "$status" == "0" ]; then
        echo 1 > /home/mridul/.cache/powerbutton
        sleep 1
        if [ "$(cat /home/mridul/.cache/powerbutton)" == "1" ]; then
            echo 0 > /home/mridul/.cache/powerbutton
            rofi -show power-menu -modi power-menu:'rofi-power-menu --choose shutdown --confirm shutdown' -show-icons
        fi
    fi
fi
