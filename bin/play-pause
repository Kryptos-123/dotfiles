#!/bin/sh
format=$(cat /home/mridul/.cache/lofi)
case $format in
    0)
        echo 1 > ~/.cache/lofi
        echo 'set pause no' | socat - /tmp/mpvsocket
        exit
    ;;
    1)
        echo 0 > ~/.cache/lofi
        echo 'set pause yes' | socat - /tmp/mpvsocket
        exit
    ;;
esac
playerctl play-pause
